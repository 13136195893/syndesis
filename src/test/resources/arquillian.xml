<?xml version="1.0"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://jboss.org/schema/arquillian"
    xsi:schemaLocation="http://jboss.org/schema/arquillian
    http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <extension qualifier="kubernetes">
      <property name="env.setup.script.url">setup.sh</property>
      <property name="env.teardown.script.url">teardown.sh</property>
      <property name="wait.for.service.list">ipaas-rest ipaas-ui ipaas-keycloak</property>
      <property name="wait.timeout">600000</property>
      <property name="namespace.destroy.enabled">true</property>
    </extension>

</arquillian>
